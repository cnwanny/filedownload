<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 设置背景色（黑色） -->

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/margin_5_dp" />

            <gradient
                android:endColor="@color/viewfinder_mask"
                android:startColor="@color/viewfinder_mask" />
        </shape>
    </item>


    <!-- 设置进度条颜色 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/margin_5_dp" />

                <gradient
                    android:endColor="@color/submit_press_color"
                    android:startColor="@color/submit_press_color" />
            </shape>
        </clip>
    </item>

</layer-list>