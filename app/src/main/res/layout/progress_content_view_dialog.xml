<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/progress_dialog_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/app_icon_48"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/margin_10_dp"
        android:layout_marginStart="@dimen/margin_10_dp"
        />
     <RelativeLayout
         android:id="@+id/progress_dialog_rel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@+id/progress_dialog_image"
         android:layout_toEndOf="@+id/progress_dialog_image"
         android:layout_marginLeft="@dimen/margin_10_dp"
         android:layout_marginStart="@dimen/margin_10_dp"
         android:layout_marginTop="@dimen/margin_7_dp"
         >
         <TextView
             android:id="@+id/progress_dialog_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true"
             android:layout_centerVertical="true"
             android:textSize="@dimen/font_size_18"
             android:textColor="@color/white"
             />

         <TextView
             android:id="@+id/progress_dialog_progress_value"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_alignParentEnd="true"
             android:layout_centerVertical="true"
             android:textColor="@color/white"
             android:textSize="@dimen/font_size_18"
             android:layout_marginRight="@dimen/margin_10_dp"
             android:layout_marginEnd="@dimen/margin_10_dp"
             />

      </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_dialog_progress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_12_dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:max="100"
        android:layout_toRightOf="@+id/progress_dialog_image"
        android:layout_toEndOf="@+id/progress_dialog_image"
        android:layout_below="@+id/progress_dialog_rel"
        android:layout_marginTop="@dimen/margin_5_dp"
        android:layout_marginBottom="@dimen/margin_5_dp"
        android:layout_marginRight="@dimen/margin_10_dp"
        android:layout_marginStart="@dimen/margin_10_dp"
        android:layout_marginLeft="@dimen/margin_10_dp"
        android:layout_marginEnd="@dimen/margin_10_dp"
        />
</RelativeLayout>
