<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg_drawable"
    android:orientation="vertical"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_title_drawable_bg" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/margin_5_dp"
            android:padding="@dimen/margin_10_dp"
            android:gravity="center_vertical"
            android:text="温馨提示"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_size_17" />
    </RelativeLayout>

    <TextView
        android:id="@+id/mydialog_view_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/margin_15_dp"
        android:paddingLeft="@dimen/margin_15_dp"
        android:paddingRight="@dimen/margin_15_dp"
        android:paddingTop="@dimen/margin_15_dp"
        android:lineSpacingExtra="@dimen/margin_3_dp"
        android:textColor="@color/text_black"
        android:textSize="@dimen/font_size_16" />
    
    
    <EditText 
        android:id="@+id/mydialog_view_content_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/margin_7_dp"
        android:paddingLeft="@dimen/margin_10_dp"
        android:paddingRight="@dimen/margin_10_dp"
        android:paddingTop="@dimen/margin_7_dp"
        android:layout_marginTop="@dimen/margin_5_dp"
        android:layout_marginBottom="@dimen/margin_5_dp"
        android:layout_marginLeft="@dimen/margin_10_dp"
        android:layout_marginRight="@dimen/margin_10_dp"
        android:background="@drawable/send_information_edit_bg_drawable"
        android:visibility="gone"
        android:textColor="@color/text_black"
        android:textSize="@dimen/font_size_16" />

    <EditText
        android:id="@+id/mydialog_view_pricecallback_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/margin_7_dp"
        android:paddingLeft="@dimen/margin_10_dp"
        android:paddingRight="@dimen/margin_10_dp"
        android:paddingTop="@dimen/margin_7_dp"
        android:layout_marginTop="@dimen/margin_5_dp"
        android:layout_marginBottom="@dimen/margin_5_dp"
        android:hint="请输入回价信息，否则不能认领改委托"
        android:layout_marginLeft="@dimen/margin_10_dp"
        android:layout_marginRight="@dimen/margin_10_dp"
        android:background="@drawable/send_information_edit_bg_drawable"
        android:visibility="gone"
        android:textColor="@color/text_black"
        android:textSize="@dimen/font_size_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1_dp"
        android:background="@color/text_guy"
        android:layout_marginTop="@dimen/margin_10_dp"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/mydialog_view_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/mydialog_sure_drawable"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_10_dp"
            android:paddingTop="@dimen/margin_10_dp"
            android:text="更新"
            android:textColor="@color/blue"
            android:textSize="@dimen/font_size_18" />

        <View
            android:layout_width="@dimen/margin_1_dp"
            android:layout_height="match_parent"
            android:background="@color/text_guy" />

        <TextView
            android:id="@+id/mydialog_view_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/mydialog_cancel_drawable"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_10_dp"
            android:paddingTop="@dimen/margin_10_dp"
            android:text="取消"
            android:textColor="@color/blue"
            android:textSize="@dimen/font_size_18" />
    </LinearLayout>

</LinearLayout>