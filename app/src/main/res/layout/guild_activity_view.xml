<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/guid_viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scrollbars="none" />


    <TextView
        android:id="@+id/start_guild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/guild_indicator"
        android:text="立即体验"
        android:layout_marginBottom="@dimen/margin_96_dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:visibility="gone"
        android:textColor="@color/white"
        android:background="@drawable/guild_but_drawable"
        android:textSize="@dimen/font_size_18"
        android:paddingTop="@dimen/margin_8_dp"
        android:paddingBottom="@dimen/margin_8_dp"
        android:paddingStart="@dimen/margin_15_dp"
        android:paddingRight="@dimen/margin_15_dp"
        android:paddingEnd="@dimen/margin_15_dp"
        android:paddingLeft="@dimen/margin_15_dp"
        />


    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/guild_indicator"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_24_dp"
        android:layout_height="@dimen/margin_48_dp"
        app:ci_margin="@dimen/margin_10_dp"
        app:ci_drawable="@mipmap/icon_select_index"
        app:ci_drawable_unselected="@mipmap/icon_unselect_index"
        />

</RelativeLayout>