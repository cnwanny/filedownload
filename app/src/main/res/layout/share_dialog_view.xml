<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/share_background_color"
    android:orientation="vertical">

    <GridView
        android:id="@+id/share_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="@dimen/margin_10_dp"
        android:listSelector="@color/transparent"
        android:numColumns="4"
        android:verticalSpacing="@dimen/margin_10_dp"
        android:layout_marginLeft="@dimen/margin_10_dp"
        android:layout_marginRight="@dimen/margin_10_dp"
        android:layout_marginEnd="@dimen/margin_10_dp"
        android:layout_marginStart="@dimen/margin_10_dp"/>

    <TextView
        android:id="@+id/share_dialog_view_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10_dp"
        android:layout_marginRight="@dimen/margin_15_dp"
        android:layout_marginLeft="@dimen/margin_15_dp"
        android:layout_marginBottom="@dimen/margin_24_dp"
        android:layout_marginStart="@dimen/margin_15_dp"
        android:layout_marginEnd="@dimen/margin_15_dp"
        android:paddingTop="@dimen/margin_8_dp"
        android:paddingBottom="@dimen/margin_8_dp"
        android:text="取消"
        android:textColor="@color/text_half_black"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="@dimen/font_size_18"
        android:background="@drawable/share_cancel_drawable"
        />
</LinearLayout>