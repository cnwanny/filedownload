<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/image_item_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.android.hifosystem.hifoevaluatevalue.recycle_pages.SquareImageView
        android:id="@+id/image_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/icon_addroompic_bg"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/image_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5_dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/blue"
        android:textSize="@dimen/font_size_16"
        android:text="请选择分类"
        android:layout_marginBottom="@dimen/margin_5_dp"
        />
</LinearLayout>